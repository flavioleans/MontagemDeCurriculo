@model MontagemCurriculo.ViewModels.CurriculoViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Currículo</title>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="css/materialize.min.css" media="screen,projection" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <h5>Objetivos</h5>
    <hr />
    <p>
        <ul>
            @foreach (var item in Model.Objetivos)
            {
                <li>@item.Descricao</li>
            }
        </ul>
    </p>

    <h5>Formações Acadêmicas</h5>
    <hr />
    <p>
        <ul>
            @foreach (var item in Model.FormacoesAcademicas)
            {
                <li>
                    @item.TipoCurso.Tipo em @item.NomeCurso,
                    @item.Instituicao, @item.AnoInicio - @item.AnoFim
                </li>
            }
        </ul>
    </p>

    <h5>Experiências Profissionais</h5>
    <hr />
    <p>
        <ul>
            @foreach (var item in Model.ExperienciasProfissionais)
            {
                <li>
                    @item.Cargo em @item.NomeEmpresa -
                    @item.AnoInicio - @item.AnoFim
                    <br />
                    @item.DescricaoAtividades
                </li>
            }
        </ul>
    </p>

    <h5>Idiomas</h5>
    <hr />
    <p>
        <ul>
            @foreach (var item in Model.Idiomas)
            {
                <li>
                    @item.Nome - @item.Nivel
                </li>
            }
        </ul>
    </p>

</body>
</html>
